<script type="text/javascript">
	
 do{
 	var n = +prompt("Привет,введи число");}

while(isNaN(n) || (n < 0))


    //else if (n< 0) {
	//alert("Положительное число");}

 
  
	var sum =0;
	for (var i = 0;i<= n; i++) {
	sum = sum +i; // sum+ =i;
	//document.write(i +"<br>");
	document.write(sum +"<br>");
	

}

</script>
